{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Frontend Server (Vite)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/Frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Terminal in Frontend",
      "type": "shell",
      "command": "bash",
      "args": ["--login"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Terminal in Root Directory",
      "type": "shell",
      "command": "bash",
      "args": ["--login"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Terminal in Backend",
      "type": "shell",
      "command": "bash",
      "args": ["--login", "-c", "pipenv shell"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Backend Server(Django)",
      "type": "shell",
      "command": "bash",
      "args": ["--login", "-c", "pipenv run python manage.py runserver"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    }
  ]
}